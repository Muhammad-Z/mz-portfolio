{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
